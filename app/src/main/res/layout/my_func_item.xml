<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y47"
    android:background="@color/white">


    <ImageView
        android:id="@+id/img_func_icon"
        android:layout_width="@dimen/x20"
        android:layout_height="@dimen/x20"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/my_text_marigin"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tx_func_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/my_text_marigin"
        android:layout_toRightOf="@+id/img_func_icon"
        android:textSize="@dimen/x12"
        android:textColor="@color/mine_menu_color"
        android:text="你哈" />
</RelativeLayout>