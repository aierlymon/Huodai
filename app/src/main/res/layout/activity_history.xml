<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--外部用来填充的颜色-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/daohang_clolor" />

    <com.linglong.baselib.widget.StatusBarHeightView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        app:use_type="use_padding_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">
            <!--这个就是头部的toolbar-->
            <include
                android:id="@+id/history_myhead"
                layout="@layout/toolbarhead"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_height" />

            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/history_refreshLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff">

                <com.scwang.smartrefresh.layout.header.ClassicsHeader
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    app:srlAccentColor="#000" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/history_recv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/index_my_color" />


                <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srlPrimaryColor="#fff" />

            </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        </LinearLayout>


    </com.linglong.baselib.widget.StatusBarHeightView>


</RelativeLayout>