<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="153dp"
    android:background="#fff"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.huodai.widget.CircleImageView
                android:id="@+id/icon"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_27"
                android:layout_toRightOf="@+id/icon"
                android:gravity="center"
                android:text="bold字体"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/quota_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_alignLeft="@id/title"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3000"
                android:textColor="@color/red"
                android:textSize="@dimen/sp_20"
                android:layout_marginLeft="@dimen/dp_20"
                tools:ignore="RtlCompat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- "
                android:textSize="12sp" />

            <TextView
                android:id="@+id/max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5000"
                android:textColor="@color/red"
                android:textSize="@dimen/sp_20" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rate_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quota_parent"
            android:layout_alignLeft="@id/title"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rixi"
                android:textColor="@color/frag_body_small_textcolor"
                android:textSize="@dimen/frg_body_samll_text_sp_12" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:maxWidth="@dimen/dp_89"
                android:text="期限时间"
                android:textColor="@color/frag_body_small_textcolor"
                android:textSize="@dimen/frg_body_samll_text_sp_12"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rate_parent"
            android:layout_alignLeft="@id/title"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/finaltext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="这个是最后的文本"
                android:textColor="@color/frag_body_small_textcolor"
                android:textSize="@dimen/frg_body_samll_text_sp_12" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/right"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/index_view"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tx_fast_nouse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/pre"
                    android:textColor="@color/frag_body_small_textcolor"
                    android:textSize="@dimen/frg_body_samll_text_sp_12" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/frag_body_small_textcolor"
                    android:textSize="@dimen/frg_body_samll_text_sp_12" />

                <TextView
                    android:id="@+id/tx_down_nouse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/end"
                    android:textColor="@color/frag_body_small_textcolor"
                    android:textSize="@dimen/frg_body_samll_text_sp_12" />
            </LinearLayout>

            <View
                android:id="@+id/index_view"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_centerInParent="true" />

            <ImageButton
                android:id="@+id/btn_request"
                android:layout_width="84dp"
                android:layout_height="28dp"
                android:layout_below="@+id/index_view"
                android:layout_centerInParent="true"
                android:src="@mipmap/frg_body_btn"
                android:text="@string/request_loan" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>