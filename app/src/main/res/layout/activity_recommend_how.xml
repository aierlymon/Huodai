                <RadioButton
                    android:layout_width="@dimen/x85"
                    android:layout_height="@dimen/y30"
                    android:layout_marginLeft="@dimen/x13"
                    android:background="#0D6B7C"
                    android:button="@null" />

                <RadioButton
